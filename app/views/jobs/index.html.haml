.row.careers-index
  .span6
    %h2
      Open vacancies:
    .careers
      - @jobs.each do |job|
        .career
          = image_tag('/icon-info.png')
          %botton.btn.input-large{:type => 'submit'}
            = job.title
          .descr
            %p
              = truncate( job.description, :length => 10)
      = paginate @jobs,:window => 1

  .span6
    %h2 Послать нам резюме
    = render 'form'
.row
  = render :partial => 'shared/post_jobs'
