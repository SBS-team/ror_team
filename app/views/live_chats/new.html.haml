%h1
  Live Chat
.row
  = form_for @live_chat, url: {action: :create} do |f|
    = f.label 'You can send your questions to one of next managers:'
    - admins_for_select = @admins.map { |admin| [admin.email, admin.id] }
    = f.select :admin_id, admins_for_select, {}, {:class => "form-control"}
    .contact-info.form-group
      = f.label 'Your name*:'
      = f.text_field :guest_name, :class => 'form-control'
    .form-group
      = f.label 'Your email*:'
      = f.email_field :guest_email, :class => 'form-control'
    .chat-msg.form-group
      = f.label 'Your message*:'
      = text_area_tag :message, '', {:class => 'form-control'}
    = f.submit 'Send Message', :class => 'btn btn-default', data: { disable_with: 'Please wait...' }