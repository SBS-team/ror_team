.row
  .col-lg-12.careers-index
    .col-lg-6
      %h2
        = t '.open_vacancies'
      .careers
        - @jobs.each do |job|
          .job.col-lg-12
            - unless job.upload_file.blank? || job.upload_file.img_name.blank?
              = image_tag job.upload_file.img_name.url(:thumb), alt: 'image', :width => 150
            - else
              = image_tag 'missing.png', :width => 150
            .title
              %h3
                = link_to job.title, job_path(job)
            .descr
              = truncate_html job.description, :length => 300
              = link_to 'learn more', job, :id => "job#{job.id}"
        = paginate @jobs,:window => 1
    .row
      = render 'form'
.row
  = render :partial => 'shared/post_jobs'
