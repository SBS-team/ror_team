.team-member
  = image_tag(@team.upload_files.first.img_name, :class => 'img-polaroid')
  .member-name
    %span
    %p.lead
      = "#{@team.first_name} #{@team.last_name}"
      = @team.role
  .about
    %p
      = @team.about

.fullteam
  - @fullteam.each do |team_member|
    = link_to team_path(team_member), :id => "pic#{team_member.id}" do
      = image_tag(team_member.upload_files.first.img_name.url(:thumb), :class => 'img-rounded', :width => 100)

.span6
  = link_to 'Back', team_index_path

.row
  = render :partial => 'shared/post_jobs'