.row.careers-index
  -if !notice.blank?
    .success.message
      %h3
        = notice
  .col-lg-6
    %h2
      = t '.open_vacancies'
    .careers
      - @jobs.each do |job|
        .job
          - unless job.upload_file.blank? || job.upload_file.img_name.blank?
            = image_tag job.upload_file.img_name.url(:thumb), alt: 'image'
          - else
            = image_tag 'missing.png', :width => 170
          .title
            %h3
              = job.title
          .descr
            = truncate_html job.description, :length => 300
            = link_to 'learn more', job, :id => "job#{job.id}"
      = paginate @jobs,:window => 1
  = render 'form'
.row
  = render :partial => 'shared/post_jobs'
