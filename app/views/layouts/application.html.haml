%html
  %head
    %title RorTeam
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = include_gon(:namespace => 'RorTeam', :camel_case => true)
    = csrf_meta_tags
  %body
    .container
      %header
        .row
          .span2
            .logo
              = link_to 'RoR-Team', '/home'
          .span6
            - if current_user
              = "Welcome, #{current_user.nickname} "
              = link_to 'Logout', auth_destroy_path
          %nav
            %ul.inline
              %li
                = link_to 'Company', '/company'
              %li
                = link_to 'Work', '/work'
              %li
                = link_to 'Team', '/team'
              %li
                = link_to 'Careers', '/careers'
              %li
                = link_to 'Contact', '/contact'
              %li
                = link_to 'Blog', '/posts'
          .chat.span1
            .btn
              = link_to 'Live Chat', '#'
      #content
        - if flash[:notice]
          %p.notice
            = flash.now[:notice].html_safe
        - if flash[:error]
          %p.error
            = flash.now[:error].html_safe
        = yield
      %footer#footer
        .contact-us.row
          .span4
            %p.lead
              Необходимо связаться с нами?
        .row
          .span6
            %small
              вы можете присоединиться к нашей медиа соц. сети
          .span6.text-right
            %small
              Или связаться с нами через email или skype
        .row.soc_net
          .span4
            %p.lead
              %i.icon-th-large
              = link_to 'Follow us on twitter', 'http://twitter.com'
          .span4
            %p.lead
              %i.icon-th
              = link_to 'Follow us on Facebook', 'http://facebook.com'
          .span4
            %p.lead
              %i.icon-envelope
              = link_to 'Contact us by email', '#'
              %br
                = link_to 'email ror_team@gmail.com', 'mailto:ror_team@gmail.com'
        .row.text-center
          © 2012-2013 RoR-Team
        .row.bottom
          .span12
