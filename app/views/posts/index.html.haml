.row
  .col-lg-8.posts.main_cont
    - @posts.each do |post|
      .post
        .post_left.text-center
          .img
            - unless post.upload_file.blank? || post.upload_file.img_name.blank?
              = image_tag(post.upload_file.img_name.url, :width => 200)
            - else
              = image_tag 'missing.png', :width => 200
          = link_to "#{pluralize(post.comments_count, t('.comment'))}", "#{special_post_path(post.created_at.strftime('%d_%m_%Y'), post)}#comments"
        .post_right
          .post-title
            = link_to post.title, special_post_path(post.created_at.strftime('%d_%m_%Y'), post)
          .post_date
            %em
              = post.created_at.strftime("%d %B %H:%M:%S")
          .post-content
            = truncate_html post.description, :length => 200
            = link_to 'learn more', special_post_path(post.created_at.strftime('%d_%m_%Y'), post)
          - unless post.categories.empty?
            .categories
              = t '.categories'
              != post.categories.collect{|cat| link_to strip_links(cat.name), posts_path(:category_name=>cat.name) }.join(', ')
          - unless post.tag_counts_on(:tags).blank?
            .tags
              = t '.tags'
              - post.tag_counts_on(:tags).each do |tag|
                = link_to tag.name, posts_path(:tag_name => tag.name), :class => 'btn btn-default'
    = paginate @posts
  .col-lg-4.sidebar
    = render :partial => 'sidebar'
