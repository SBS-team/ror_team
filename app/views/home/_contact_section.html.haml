%section#Contacts.Contacts_l-1
  .Contacts_l-3
  .content_area
    .row{"data--50-bottom" => "opacity:0.1;transform: scale(0.9)", "data-120-top" => "opacity:0.1;transform: scale(0.9)"}
      %h2= t 'home.index.contact_us'
    .contact_form
      = form_for @message, url: home_index_path, html: {class: 'web-form', multipart: true} do |form|
        - if @message.errors.any?
          .ror-team-errors
            %h6
              = pluralize(@message.errors.count, 'error')
              prohibited this message from being sent:
            %ul
              - @message.errors.full_messages.each do |msg|
                %li= msg
        %h4 We will respond as soon as we can
        .clearfix
          .left_side
            = form.label :name do
              Name
              = form.text_field(:name, required: "")
            = form.label :email do
              Email
              = form.email_field(:email, required: "")
          .right_side
            = form.label :text do
              Message
              = form.text_area(:text, required: "")
        = submit_tag 'Submit'
      .copyRight
        = cache 'contact_description' do
          %p
        %span
          = "sbs-team #{Time.now.strftime('%Y')}"