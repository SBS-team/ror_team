!!!
%html
  %head
    = favicon_link_tag '/favicon.ico'
    %title RorTeam
    = stylesheet_link_tag    'application', 'https://fonts.googleapis.com/css?family=Francois+One'
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    =# javascript_include_tag :defaults
    = include_gon(namespace: 'RorTeam', camel_case: true)
    = csrf_meta_tags
  %body
    %section#nav
      /[if lt IE 9]
      .inner_wrapp
        = link_to root_path, class: 'top_nav_logo clearfix', data: {rel: 'welcome'} do
          = image_tag 'sbs_c_small.png', width: 58, height: 58
        %nav.clearfix
          %ul
            %li
              = link_to 'About us', '#', title: 'Next Section', data: {rel: 'What_we_do'}
            %li
              = link_to 'Portfolio', '#', title: 'Next Section', data: {rel: 'Portfolio'}
            %li
              = link_to 'Vacancy', '#', title: 'Next Section', data: {rel: 'job'}
            %li
              = link_to 'Contacts', '#', title: 'Next Section', data: {rel: 'Contacts'}
            %li
              = link_to 'News', posts_path, target: '_blank'
    - if flash[:error]
      .alert.alert-error
        = flash.now[:error]
    - if flash[:notice]
      .alert.alert-success
        = flash.now[:notice]
    - if flash[:alert]
      .alert.alert-info
        = flash.now[:alert]
    = yield
    .site-heart
      / Start SiteHeart code
      :javascript
        (function(){
        // your widget ID
        var widget_id = 658123;
        _shcp =[{widget_id : widget_id}];
        // set default language
        var lang =(navigator.language || navigator.systemLanguage
        || navigator.userLanguage ||"en")
        .substr(0,2).toLowerCase();
        // script url
        var url ="widget.siteheart.com/widget/sh/"+ widget_id +"/"+ lang +"/widget.js";
        var hcc = document.createElement("script");
