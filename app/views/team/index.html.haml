.row.team-members
  .span6.team-members
    - @team.each do |member|
      .team-member
        - unless member.upload_files.blank? || member.upload_files.first.img_name.blank?
          = image_tag(member.upload_files.first.img_name, :class => 'img-circle', :height => 150, :width => 150)
        - else
          = image_tag 'missing.png'
        .member-name
          %span
          %p.lead
            = link_to "#{member.first_name} #{member.last_name}", team_path(member)
          %p
            %span
              = link_to "#{member.role}", team_index_path(:role => member.role), :class => 'btn'
        .about
          %p
            = truncate(member.about.capitalize, :length => 50)
      %hr
    = paginate @team
  .span6
    %h3
      = t '.team_photo'
    #myCarousel.carousel.slide
      %ol.carousel-indicators
        %li.active{'data-slide-to' => '0', 'data-target' => '#myCarousel'}
        %li{'data-slide-to' => '1', 'data-target' => '#myCarousel'}
        %li{'data-slide-to' => '2', 'data-target' => '#myCarousel'}
      .carousel-inner
        .active.item
          = image_tag('/Screen.png')
        .item
          = image_tag('/Screen.png')
        .item
          = image_tag('/Screen.png')
      = link_to '‹', '#myCarousel', 'data-slide' => 'prev', :class => 'carousel-control left'
      = link_to '›', '#myCarousel', 'data-slide' => 'next', :class => 'carousel-control right'
    .about-team
      %h3
        = t '.our_command'
      .text
        %p
          = t '.about'
      .g-map
        %script{:charset => 'utf-8', :src => '//api-maps.yandex.ru/services/constructor/1.0/js/?sid=AfRHYGTwdoGSTYMmPPMXwUQgkFqvcfn_&width=570&height=350', :type => 'text/javascript'}
.row
  = render :partial => 'shared/post_jobs'