.row.careers-index
  .span6
    %h2
      Доступные
    .careers
      - @jobs.each do |job|
        .career
          = image_tag('/icon-info.png')
          %botton.btn.input-large{:type => 'submit'}
            = job.title
          .descr
            %p
              = job.description
  .span6
    %h2 Послать нам резюме
    = render 'form'
.row
  = render :partial => 'shared/post_jobs'
