.row
  .span8.posts.main_cont
    - @posts.each do |post|
      .post
        .post_left.text-center
          .img
            - if !post.upload_files.blank?
              = image_tag(post.upload_files.first.img_name)

            - else
              = image_tag 'missing.png'
          = link_to "#{pluralize(post.comments_count, t('.comment'))}", post_path(post)
        .post_right
          .post-title
            = link_to post.title, post_path(post)
          .post_date
            %em
              = post.created_at.strftime("%d %B %H:%M:%S")
          .post-content
            = truncate(post.description, lenght: 200, ommision: '...(read more)')
          - unless post.categories.empty?
            .categories
              = t '.categories'
              != post.categories.collect{|cat| link_to strip_links(cat.name), posts_path(:category_name=>cat.name) }.join(', ')

          - unless post.tag_counts_on(:tags).blank?
            .tags
              = t '.tags'
              - post.tag_counts_on(:tags).each do |tag|
                = link_to tag.name, posts_path(:tag_name => tag.name), :class => 'btn'
    = paginate @posts
  .span4.sidebar
    = render :partial => 'sidebar'
