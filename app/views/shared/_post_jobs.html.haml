.span6.posts
  %h2
    Latest blog posts:
  .bl_content
    - unless @last_posts.nil?
      - @last_posts.each do |last_post|
        .post
          = image_tag('/icon-info.png')
          .title
            = link_to last_post.title, last_post
          .cont
            by
            = last_post.admin.email
.span6.jobs
  %h2
    Open vacancies:
  .bl_content
    - unless @last_jobs.nil?
      - @last_jobs.each do |last_job|
        .job
          = image_tag('/icon-info.png')
          .title
            = link_to last_job.title, last_job
          .resume.text-right
            = link_to 'Send resume', last_job, :class => 'btn'