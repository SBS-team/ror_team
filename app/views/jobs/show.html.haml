.row.careers-index
  .span6
    %h2
      = t '.open_vacancies'
    .careers
      .career
      .title
        - unless @job.upload_file.blank? || @job.upload_file.img_name.blank?
          = image_tag @job.upload_file.img_name.url(:thumb), alt: 'image'
        - else
          = image_tag 'missing.png'
        %h3
          %i{:class=>'icon-star'}
          = @job.title
        .descr
          %p
            != @job.description
  = render 'form'
.row
  = render :partial => 'shared/post_jobs'
