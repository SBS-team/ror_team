.row.careers-index
  .col-lg-6
    %h2
      = t '.open_vacancies'
    .careers
      .career.col-lg-12
        .title
          - unless @job.upload_file.blank? || @job.upload_file.img_name.blank?
            = image_tag @job.upload_file.img_name.url(:thumb), alt: 'image', width: 200
          - else
            = image_tag 'no_image.gif', width: 200
        %h3
          = @job.title
        .descr
          != @job.description
  = render 'form'
.row
  = render partial: 'shared/post_jobs'
