.row.team-members
  - @team_member.each do |user|
    .team-member
      = image_tag ("#{user.upload_files.first.filename.url}", :height => 150, :width => 150)
      .member-name
        %span
        = link_to "#{user.fio}", team_path(user), :class => 'btn'
      .about
        %p= "#{user.about}"
  = paginate @team_member,:window => 1
