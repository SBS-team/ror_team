.row
  .span6
    %h1
      = t '.contact_us'
    .web-form
      = form_for @message, :url => contact_index_path, :html => {:class => 'web-form', :multipart => true} do |form|
        - if @message.errors.any?
          #error_explanation
            %h5
              = pluralize(@message.errors.count, 'error')
              prohibited this message from being sent:
            %ul
              - @message.errors.full_messages.each do |msg|
                %li= msg
        .name
          = form.text_field(:name, 'placeholder' => 'Your name*', 'class' => 'span4')
        .email-phone
          = form.email_field(:email, 'placeholder' => 'Your email*', 'class' => 'span2')
          = form.telephone_field(:phone, 'placeholder' => 'Your phone', 'class' => 'span2')
        .text
          = form.text_area(:text, 'placeholder' => 'Your message', 'class' => 'span4' , 'rows' => '5')
        .options
          %h3
            What kind of services do you need?
          .icons
            - @services.each do |service|
              .span2.text-center
                = image_tag service.upload_files.sample.filename.url, title: service.name, alt: service.name, width: 100, height: 100
                %h4
                  = form.label :service_type do
                    = form.radio_button :service_type, service.name
                    = service.name
        .radios
          %h4
            Im interested in?
          .choose
            = form.label :work_type_1 do
              = form.radio_button :work_type, '1'
              = 'Minimum work project'
            = form.label :work_type_2 do
              = form.radio_button :work_type, '2'
              = 'Work project from the beginning'
            = form.label :work_type_3 do
              = form.radio_button :work_type, '3'
              = 'Help with existing project'
            = form.label :work_type_4 do
              = form.radio_button :work_type, '4'
              = 'Technical audit'
            = form.label :work_type_5 do
              = form.radio_button :work_type, '5'
              = 'Increase in productivity'
            = form.label :work_type_6 do
              = form.radio_button :work_type, '6'
              = 'Update to new Rails'
            = form.label :work_type_7 do
              = form.radio_button :work_type, '7'
              = 'Service'
        .submit-form.text-right
          = submit_tag 'Send Message', :class => 'btn', data: { disable_with: 'Please wait...' }