.row
  .span6
    %h1
      = t '.contact_us'
    .web-form
      = form_for @message, :url => contact_index_path, :html => {:class => 'web-form', :multipart => true} do |form|
        - if @message.errors.any?
          .error.message
            %h3
              = pluralize(@message.errors.count, 'error')
              prohibited this message from being sent:
            %ul
              - @message.errors.full_messages.each do |msg|
                %li= msg
            %br
            %i
              = 'Click to close'
        .name
          = form.text_field(:name, 'placeholder' => 'Your name*', 'class' => 'span4')
        .email-phone
          = form.email_field(:email, 'placeholder' => 'Your email*', 'class' => 'span2')
          = form.telephone_field(:phone, 'placeholder' => 'Your phone', 'class' => 'span2')
        .text
          = form.text_area(:text, 'placeholder' => 'Your message', 'class' => 'span4' , 'rows' => '5')
        .options
          %h3
            What kind of services do you need?
          .icons
            - @services.each do |service|
              .span2.text-center
                %label
                  - unless service.upload_files.blank? || service.upload_files.sample.img_name.blank?
                    = image_tag service.upload_files.sample.img_name.url, title: service.name, alt: service.name, width: 100, height: 100
                  - else
                    = image_tag 'missing.png'
                  = form.radio_button :service_type, service.name
                  = service.name
        .radios
          %h4
            Im interested in?
          .choose
            %label
              = form.radio_button :work_type, 'Minimum work project'
              = 'Minimum work project'
            %label
              = form.radio_button :work_type, 'Work project from the beginning'
              = 'Work project from the beginning'
            %label
              = form.radio_button :work_type, 'Help with existing project'
              = 'Help with existing project'
            %label
              = form.radio_button :work_type, 'Technical audit'
              = 'Technical audit'
            %label
              = form.radio_button :work_type, 'Increase in productivity'
              = 'Increase in productivity'
            %label
              = form.radio_button :work_type, 'Update to new Rails'
              = 'Update to new Rails'
            %label
              = form.radio_button :work_type, 'Service'
              = 'Service'
        .submit-form.text-right
          = submit_tag 'Send Message', :class => 'btn', data: { disable_with: 'Please wait...' }